# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/whatsapp_bot"

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_TTL=3600

# =============================================================================
# RABBITMQ QUEUE
# =============================================================================
RABBITMQ_URL="amqp://admin:admin@localhost:5671"

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
# Access Token (short-lived, 15 minutes)
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-change-in-production"
JWT_EXPIRES_IN="15m"

# Refresh Token (long-lived, 7 days)
REFRESH_TOKEN_SECRET="your-refresh-token-secret-different-from-jwt-secret-change-in-production"
REFRESH_TOKEN_EXPIRES_IN="7d"

# =============================================================================
# MAIL SERVICE (SMTP)
# =============================================================================
# Gmail Configuration Example
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_SECURE="false"
MAIL_USER="your-email@gmail.com"
MAIL_PASS="your-gmail-app-password"
MAIL_FROM="WhatsApp Bot <noreply@yourapp.com>"

# Alternative SMTP Providers:
# SendGrid: smtp.sendgrid.net, Port: 587
# Mailgun: smtp.mailgun.org, Port: 587
# AWS SES: email-smtp.region.amazonaws.com, Port: 587

# =============================================================================
# APPLICATION
# =============================================================================
# Frontend URL (for email links)
APP_URL="http://localhost:3000"

# API Configuration
PORT=3001
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3002"

# Node Environment
NODE_ENV="development"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW="60000"
RATE_LIMIT_MAX="100"
AUTH_RATE_LIMIT_MAX="5"

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL="info"

# =============================================================================
# WHATSAPP SERVER
# =============================================================================
WHATSAPP_SERVER_URL="http://localhost:21465"
WHATSAPP_SERVER_SECRET="your-whatsapp-server-secret-key"
